void setup() {
  // put your setup code here, to run once:
  pinMode(PressureInput, INPUT);
  pinMode(PressureBlinker, OUTPUT);
  pinMode(BUTTON_PIN,INPUT);
  Serial.begin(9600);
}

void loop() {
  // put your main code here, to run repeatedly:
  int Read = digitalRead(BUTTON_PIN);  // HIGH/LOW

  if (Read == 1) {
    SitDuration = SitDuration + 1;
    if (SitDuration == 20) {
      digitalWrite(PressureBlinker,LOW);

    int size = sizeof(durations) / sizeof(int);

     for (int note = 0; note < size; note++) {
      //to calculate the note duration, take one second divided by the note type.
      //e.g. quarter note = 1000 / 4, eighth note = 1000/8, etc.
      int duration = 1000 / durations[note];
      tone(BUZZER_PIN, melody[note], duration);

      //to distinguish the notes, set a minimum time between them.
      //the note's duration + 30% seems to work well:
      int pauseBetweenNotes = duration * 1.30;
      delay(pauseBetweenNotes);
    
      //stop the tone playing:
      noTone(BUZZER_PIN);
    }
      delay(500);
      SitDuration = 0;
      digitalWrite(PressureBlinker,HIGH);
    }
  } else if (Read == 0) {
    SitDuration = 0;
    digitalWrite(PressureBlinker,HIGH);
  }

  //digitalWrite(PressureBlinker,Read);
 delay(100);
Serial.println(SitDuration);
}